// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - stores authenticated users
model User {
  id            Int            @id @default(autoincrement())
  googleId      String         @unique
  email         String         @unique
  name          String?
  avatar        String?
  lastLogin     DateTime?
  expoPushToken String?        // Expo push notification token
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  // Relations
  refreshTokens RefreshToken[]
  tasks         Task[]

  @@index([email])
  @@index([googleId])
}

// RefreshToken model - stores refresh tokens for token rotation
model RefreshToken {
  id               Int       @id @default(autoincrement())
  token            String    @unique
  userId           Int
  expiresAt        DateTime
  revoked          Boolean   @default(false)
  replacedByToken  String?
  createdAt        DateTime  @default(now())
  
  // Relations
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@index([token])
}

// Task model - demonstrates protected resource
model Task {
  id             Int       @id @default(autoincrement())
  title          String
  description    String?
  completed      Boolean   @default(false)
  priority       String    @default("medium") // low, medium, high, urgent
  dueDate        DateTime?
  notificationId String?
  reminderTimes  Int[]     @default([60, 1440]) // Minutes before due date: [1 hour, 1 day]
  
  // Device contact reference (stores device contact ID, not a DB relation)
  // Contact details are fetched from device on-demand using expo-contacts
  contactId      String?   // Device contact ID from expo-contacts
  
  // Task location (can be different from contact address)
  taskAddress    String?
  latitude       Float?
  longitude      Float?
  
  userId         Int
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  // Relations
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([contactId])
  @@index([completed])
  @@index([priority])
  @@index([dueDate])
}
